# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///edutrack.db

# For Aiven PostgreSQL (replace with your actual Aiven connection details)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# For Aiven MySQL (replace with your actual Aiven connection details)
# DATABASE_URL=mysql://username:password@hostname:port/database_name

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Aiven Database Configuration (if using Aiven)
AIVEN_DB_HOST=your-aiven-host
AIVEN_DB_PORT=5432
AIVEN_DB_NAME=your-database-name
AIVEN_DB_USER=your-username
AIVEN_DB_PASSWORD=your-password
AIVEN_DB_SSL_MODE=require

# Database Capacity Configuration
# Total database capacity in GB (default: 1GB for Aiven cloud)
DATABASE_TOTAL_CAPACITY_GB=1

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
MAIL_MAX_EMAILS=100
MAIL_SUPPRESS_SEND=False
BASE_URL=http://127.0.0.1:5000